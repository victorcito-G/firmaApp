    <CollectionView  x:Name="Lista"  ItemsSource="{Binding Firmas}" 
                   >
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="5"
                       CornerRadius="5"
                       IsClippedToBounds="False">
                    <Grid HeightRequest="100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".3*"/>
                            <ColumnDefinition Width=".3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".5*"/>
                            <RowDefinition Height=".5*"/>
                        </Grid.RowDefinitions>


                        <Image Grid.RowSpan="2" Source="{Binding MiImagen}"></Image>
                        <Label Grid.Column="1"
                               x:Name="lbllong"
                               FontAttributes="Bold"
                               FontSize="Small"
                               Text="{Binding codigo}"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="2"
                               FontAttributes="Bold"
                               FontSize="Small"
                               Text="{Binding name}"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="3"
                               FontAttributes="Bold"
                               FontSize="Small"
                               Text="{Binding descripcion}"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="4"
                               FontAttributes="Bold"
                               FontSize="Small"
                               Text="{Binding MiImagen}"
                               VerticalOptions="Center"/>



                    </Grid>

                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    
    
    
